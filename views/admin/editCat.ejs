<% include ../layouts/adminheader %>
<h2 class="page-title"> Edit <%= cattitle %> </h2>
<a href="/admin/category" class="btn btn-primary">Back to category list</a>

<form method ="POST" action="/admin/category/postedit">
  <div class="form-group">
    <label for="cattitle">Name</label>
    <input type = "text" class = "form-control" name="cattitle" placeholder="Enter the Name" value="<%= cattitle %>"</input>
  </div>
  <div class="form-group">
    <label for="slug">Slug</label>
    <input type = "text" class = "form-control" name="slug" placeholder="Enter the slug" value="<%= slug %>"</input>
  </div>
  <input type="hidden" name="id" value="<%= id %>">
  <button class="btn btn-primary"> Submit </button>
<% include ../layouts/adminfooter %>
