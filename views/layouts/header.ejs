    <ul class="navbar-nav mr-auto">
      <% pages.forEach(function(page){ %>
        <% if(page.slug == "home" ) { %>
      <%  } else { %>
        <li class="nav-item">
          <a class="nav-link" href="/nav/<%= page.slug %>"><%= page.pagetitle %></a>
        </li>
      <% } %>
    <%  }); %>
    </ul>
